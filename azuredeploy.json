{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "siteName": {
      "type": "string",
      "metadata": {
        "description": "The name of the web app that you wish to create."
      }
    },
    "hostingPlanName": {
      "type": "string",
      "metadata": {
        "description": "The name of the App Service plan to use for hosting the web app."
      }
    },
    "sku": {
      "type": "string",
      "allowedValues": [
        "F1",
        "D1",
        "B1",
        "B2",
        "B3",
        "S1",
        "S2",
        "S3",
        "P1",
        "P2",
        "P3",
        "P4"
      ],
      "defaultValue": "F1",
      "metadata": {
        "description": "The pricing tier for the hosting plan."
      }
    },
    "workerSize": {
      "type": "string",
      "allowedValues": [
        "0",
        "1",
        "2"
      ],
      "defaultValue": "0",
      "metadata": {
        "description": "The instance size of the hosting plan (small, medium, or large)."
      }
    },
    "repoURL": {
      "type": "string",
      "metadata": {
        "description": "The URL for the GitHub repository that contains the project to deploy."
      }
    },
    "branch": {
      "type": "string",
      "defaultValue": "master",
      "metadata": {
        "description": "The branch of the GitHub repository to use."
      }
    },
    "location": {
      "type": "string",
      "allowedValues": [
        "australiaeast",
        "australiasoutheast"
      ],
      "defaultValue": "australiaeast",
      "metadata": {
        "description": "Location for all resources."
      }
    },
    "customHostName": {
      "type": "string",
      "defaultValue": "<insertsitename>.azurewebsites.net",
      "metadata": {
        "description": "Custom Host Name, default is sitename.azurewebsites.net"
      }
    },
    "sslState": {
        "type": "string",
        "allowedValues": [
          "Disabled",
          "SniEnabled",
          "IpBasedEnabled"
        ],
        "defaultValue": "Disabled",
        "metadata": {
          "description": "Is SSL enabled"
      }
    },
    "defaultDocuments": {
      "type": "string",
      "metadata": {
        "description": "Default Document, leave blank if using default"
      }
    },
    "netFrameworkVersion": {
      "type": "string",
      "allowedValues": [
        "v4.7",
        "v3.5"
      ],
      "defaultValue": "v4.7",
      "metadata": {
        "description": "Framework Version"
      }
    },
    "phpVersion": {
      "type": "string",
      "allowedValues": [
        "Off",
        "5.6",
        "7.0",
        "7.1",
        "7.2"
      ],
      "defaultValue": "Off",
      "metadata": {
        "description": "PHP Version"
      }
    },
    "pythonVersion": {
      "type": "string",
      "allowedValues": [
        "Off",
        "2.7",
        "3.4"
      ],
      "defaultValue": "Off",
      "metadata": {
        "description": "Python Version"
      }
    },
    "javaVersion": {
      "type": "string",
      "allowedValues": [
        "Off",
        "Java 7",
        "Java 8"
      ],
      "defaultValue": "Off",
      "metadata": {
        "description": "Java Version"
      }
    },
    "32bitWorkerProcess": {
      "type": "string",
      "allowedValues": [
        "true",
        "false"
      ],
      "defaultValue": "true",
      "metadata": {
        "description": "Use 32bit worker process, false for 64"
      }
    },
    "managedPipeline": {
      "type": "string",
      "allowedValues": [
        "Integrated",
        "Classic"
      ],
      "defaultValue": "Integrated",
      "metadata": {
        "description": "Managed Pipeline version, Classic for legacy apps"
      }
    },
    "alwaysOn": {
      "type": "string",
      "allowedValues": [
        "true",
        "false"
      ],
      "defaultValue": "false",
      "metadata": {
        "description": "Is site always loaded, default false"
      }
    }
  },
  "resources": [
    {
      "apiVersion": "2015-08-01",
      "name": "[parameters('hostingPlanName')]",
      "type": "Microsoft.Web/serverfarms",
      "location": "[parameters('location')]",
      "sku": {
        "name": "[parameters('sku')]",
        "capacity": "[parameters('workerSize')]"
      },
      "properties": {
        "name": "[parameters('hostingPlanName')]"
      }
    },
    {
      "name": "[parameters('siteName')]",
      "type": "Microsoft.Web/sites",
      "apiVersion": "2016-08-01",
      "location": "[parameters('location')]",
      "tags": {},
      "properties": {
        "enabled": true,
        "hostNameSslStates": [
          {
            "name": "[parameters('customHostName')]",
            "sslState": "[parameters('sslState')]",
            "toUpdate": true,
            "hostType": "standard"
          }
        ],
        "serverFarmId": "[parameters('hostingPlanName')]",
        "reserved": false,
        "siteConfig": {
          "numberOfWorkers": "[parameters('workerSize')]",
          "defaultDocuments": [
            "[parameters('defaultDocuments')]"
          ],
          "netFrameworkVersion": "[parameters('netFrameworkVersion')]",
          "phpVersion": "[parameters('phpVersion')]",
          "pythonVersion": "[parameters('pythonVersion')]",
          "nodeVersion": "string",
          "httpLoggingEnabled": true,
          "logsDirectorySizeLimit": "40",
          "detailedErrorLoggingEnabled": false,
          "publishingUsername": "WebDeploymentUser987",
          "connectionStrings": [
            {
              "name": "string",
              "connectionString": "string",
              "type": "string"
            }
          ],
          "handlerMappings": [
            {
              "extension": "string",
              "scriptProcessor": "string",
              "arguments": "string"
            }
          ],
          "documentRoot": "string",
          "scmType": "none",
          "use32BitWorkerProcess": "[parameters('32bitWorkerProcess')]",
          "webSocketsEnabled": false,
          "alwaysOn": "[parameters('alwaysOn')]",
          "javaVersion": "[parameters('javaVersion')]",
          "managedPipelineMode": "[parameters('managedPipeline')]",
          "limits": {
            "maxPercentageCpu": "80",
            "maxMemoryInMb": "900",
            "maxDiskSizeInMb": "900"
          },
          "http20Enabled": false,
          "minTlsVersion": "1.0"
        },
        "scmSiteAlsoStopped": false,
        "clientAffinityEnabled": true,
        "clientCertEnabled": false,
        "hostNamesDisabled": false,
        "containerSize": "integer",
        "httpsOnly": "boolean"
      },
      "identity": {
        "type": "SystemAssigned"
      }
    }
  ]
}